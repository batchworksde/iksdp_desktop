#!/bin/bash

wget --inet4-only -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > packages.microsoft.gpg
sudo install -D -o root -g root -m 644 packages.microsoft.gpg /etc/apt/keyrings/packages.microsoft.gpg && rm packages.microsoft.gpg
echo "deb [arch=amd64,arm64,armhf signed-by=/etc/apt/keyrings/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main" |sudo tee /etc/apt/sources.list.d/vscode.list > /dev/null

sudo apt -o Acquire::ForceIPv4=true install apt-transport-https
sudo apt -o Acquire::ForceIPv4=true update && sudo apt -o Acquire::ForceIPv4=true install code -y
