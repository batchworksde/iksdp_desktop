#!/bin/bash

wget -qO- https://download.spotify.com/debian/pubkey_C85668DF69375001.gpg | gpg --dearmor > packages.spotify.gpg
sudo install -D -o root -g root -m 644 packages.spotify.gpg /etc/apt/keyrings/packages.spotify.gpg && rm packages.spotify.gpg
echo "deb [signed-by=/etc/apt/keyrings/packages.spotify.gpg] https://repository.spotify.com stable non-free" |sudo tee /etc/apt/sources.list.d/spotify.list > /dev/null

sudo apt update && sudo apt install spotify-client -y